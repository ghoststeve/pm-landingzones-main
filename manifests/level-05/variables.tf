}

variable "location" {
  description = "Location of resource deployed"
  type        = string
}

variable "environment_short_name" {
  description = "Environment short name of the deploying environment"
  type        = string
}

variable "location_short_name" {
  description = "Location of resource deployed in short name"
  type        = string
}
